{% extends 'base.html.twig' %}

{% block body %}
    <h1>lista aukcji</h1>

    {% for auction in auctions %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h4><a href="{{ url('auction_details', {"id":auction.id}) }}"> {{ auction.title }}</a></h4>
            </div>
            <div class="panel-body">
                <p>{{ auction.description }}</p>
            </div>
            <ul class="list-group">
                <li class="list-group-item">Cena: {{ auction.price }} zł</li>
                <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} zł</li>
                <li class="list-group-item">Data zakończenia: {{ auction.expiresAt | date("Y-m-d H:i:s") }}</li>
            </ul>
        </div>
    {% else %}
        <div class="row alert-info">
            <h4 class="text-center">Brak aktywnych aukcji</h4>
        </div>
    {% endfor %}
{% endblock %}

